program diskon;
uses crt;
var harga,total: real;
begin
    clrscr;
    write('Masukan Harga : Rp.'); 
    readln(harga);
    if (harga >= 1000000) then total:= harga - harga * 30/100
    else if(harga >= 500000) then total:= harga - harga * 20/100 
    else if(harga >= 100000) then total:= harga - harga * 10/100
    else total:= harga; writeln('Total yang harus anda bayar adalah Rp.',total:5:2);
end.
